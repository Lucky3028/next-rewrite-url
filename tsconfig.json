{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["esnext"],
    "types": ["vitest/globals"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.mjs"
  ],
  "exclude": [
    "node_modules/**/*.ts",
    "bin/next-rewrite-url.mjs",
    "vite.config.ts"
  ]
}
